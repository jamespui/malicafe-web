doctype html
html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description' content='')
        meta(name='keywords' content='')
        meta(name='author' content='')
        title #{title}
        link(rel='stylesheet', href='../../static/vendor/css/bootstrap.min.css')
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css')
        link(rel="stylesheet" href="../../static/vendor/css/simple-sidebar.css")
        block css
    body
        block header
        #wrapper
            #sidebar-wrapper
                ul.sidebar-nav
                    li.sidebar-brand
                        a(href='#')
                            | MALICAFE
                    li
                        a(href='/admin/dashboard') Dashboard
                    li
                        a(href='/admin/food/menu') Food Menu
                    li
                        a(href='/admin/order') Order
                    li
                        a(href='/admin/feedback') Feedback
                    li
                        a(href='/admin/settings') Settings
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                a#menu-toggle(href='#menu-toggle')
                    span.navbar-toggler-icon
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='#')
                                | Dashboard
                                span.sr-only (current)

                    form.form-inline.my-2.my-lg-0
                        input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
                        button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search


            #page-content-wrapper
                .container-fluid
                    block content

        script(src='../../static/vendor/js/jquery-slim.min.js')
        script(src='../../static/vendor/js/popper.min.js')
        script(src='../../static/vendor/js/bootstrap.min.js')
        script(src='../../static/vendor/js/angular.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js')
        script.
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
            $("#wrapper").toggleClass("toggled");
            toastr.info('Are you the 6 fingered man?')
        block scripts
