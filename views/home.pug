block scripts
    script(src='../static/vendor/js/angular.min.js')
    script.
        const strAppName = 'app';
        const strCtrName = 'ctr';
        const app = angular.module(strAppName, []);

        app.config(['$httpProvider', function ($httpProvider) {
            $httpProvider.defaults.xsrfCookieName = 'csrftoken';
            $httpProvider.defaults.xsrfHeaderName = 'X-CSRFToken';
        }]);

        app.controller(strCtrName, ['$scope', '$http',
            function ($scope, $http) {
                $scope.feedbackData = {}
                $scope.feedb = function () {
                    $http({
                        method: 'POST',
                        url: '/api/feedback/add',
                        data: $scope.feedbackData
                    }).then(
                        function successCallback(response) {
                            $scope.feedbackData = {}
                            console.log(response.data);
                            $.jnoty('Thank your for your Feedback.', {
                                sticky: true,
                                header: 'Success',
                                theme: 'jnoty-success',
                                icon: 'fa fa-check-circle'
                            });
                        },

                        function errorCallback(response) {
                        }
                    );
                }
            }]);