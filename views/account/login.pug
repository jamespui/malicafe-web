extends ../common/base.pug
block css
block content
    section.probootstrap-section
        div(ng-app='appLogin' ng-controller='ctrLogin')
            .container
                .probootstrap-animate
                    .text-center.probootstrap-animate
                        .probootstrap-heading.dark
                            h1.primary-heading Login
                            h3.secondary-heading welcome back

                    .col-md-12
                            hr
                            form
                                .form-group
                                    label Email
                                    input.form-control(type='text')
                                .form-group
                                    label Password
                                    input.form-control(type='password')

                                .row
                                    .col-lg-6.col-12
                                        a.text-muted(href="/forgotpassword") Forgot your password?
                                .my-3.text-center
                                    button.btn.btn-primary.btn-lg.text-uppercase.w-50(type='submit') Login
                                .text-center
                                    | Don't have an account? &nbsp
                                    a(href='/register') Create One





block scripts
    script(src='../static/vendor/js/angular.min.js')
    script.
      const strAppName = 'appLogin';
      const strCtrName = 'ctrLogin';
      const app = angular.module(strAppName, []);

      app.config([
        '$httpProvider', function($httpProvider) {
          $httpProvider.defaults.xsrfCookieName = 'csrftoken';
          $httpProvider.defaults.xsrfHeaderName = 'X-CSRFToken';
        }]);

      app.controller(strCtrName, [
        '$scope', '$http', '$httpParamSerializer',
        function($scope, $http, $httpParamSerializer) {

        }]);
