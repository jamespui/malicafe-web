    style.
        #map {
            height: 100%;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

#map
script.
    function initMap() {
        //map options
        var options = {
            zoom: 20,
            center: {lat: 1.554281, lng: 110.251613}
        }
        //new map
        var map = new google.maps.Map(document.getElementById('map'), options);
        //Add marker
        var marker = new google.maps.Marker({
            position: {lat: 1.554281, lng: 110.251613},
            map: map
        });

        //Add popup name location
        var infoWindow = new google.maps.InfoWindow({
            content:'<h3>Hai!  Welcome to MaliCafe</h3>'
        });

        marker.addListener('click', function(){
            infoWindow.open(map, marker);
        })
    }
script(async='' defer='' src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCHDcB5Hh6mqgN6XMFPTmMhwpzys_g7zjU&callback=initMap')
