extends ../common/base.pug
block css
block content
    div(ng-app='appRegister' ng-controller='ctrRegister')
        .container.my-5
            .d-flex.justify-content-center
                .col-lg-6.col-12
                    .card
                        .card-body.p-5
                            .text-center
                                h4.text-uppercase register
                                p.text-muted Please fill in this form to create an account.
                            hr
                            form
                                .form-group
                                    label Username
                                    input.form-control(type='text')
                                .form-group
                                    label Email
                                    input.form-control(type='email')
                                .form-group
                                    label First Name
                                    input.form-control(type='text')
                                .form-group
                                    label Last Name
                                    input.form-control(type='text')
                                .form-group
                                    label Password
                                    input.form-control(type='password')
                                .text-center
                                    button.btn.btn-outline-dark.btn-lg.text-uppercase.w-50(type='submit') Register




block scripts
    script(src='../static/vendor/js/angular.min.js')
    script.
      const strAppName = 'appRegister';
      const strCtrName = 'ctrRegister';
      const app = angular.module(strAppName, []);

      app.config([
        '$httpProvider', function($httpProvider) {
          $httpProvider.defaults.xsrfCookieName = 'csrftoken';
          $httpProvider.defaults.xsrfHeaderName = 'X-CSRFToken';
        }]);

      app.controller(strCtrName, [
        '$scope', '$http', '$httpParamSerializer',
        function($scope, $http, $httpParamSerializer) {

        }]);
