extends shop_common/base
block css
block header
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/logo')
            img#logo.d-inline-block.mr-1(alt='Logo' src='/static/resto/img/logocafe_black.png' width='117' height='40')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
            form.form-inline.my-2.my-lg-0
                ul.navbar-nav.mr-auto
                    li
                        a.btn.btn-warning.btn-md.text-uppercase.mx-4(href='/cart') Continue Shopping
                    li
                        a.btn.btn-outline-danger.btn-md.text-uppercase(href='/logo') Go to Home

block content
    .container
        .py-5.text-center.text-xl
        .row
            .col-md-5.order-md-2.mb-4
                h4.d-flex.justify-content-between.align-items-center.mb-3
                    span.text-muted SUMMARY
                    span.badge.badge-secondary.badge-pill 3
                ul.list-group.mb-3
                    li.list-group-item
                        div
                            | KOLO MEE
                            span.badge-warning.badge-secondary.badge-pill.mx-2 2
                        div
                            span.text-muted RM 6.00

                        button.btn.btn-danger.btn-sm.float-right(ng-click='') Remove
                    li.list-group-item
                        div
                            | ROJAK
                            span.badge-warning.badge-secondary.badge-pill.mx-2 1
                        div
                            span.text-muted RM 5.00
                        button.btn.btn-danger.btn-sm.float-right(ng-click='') Remove
                    li.list-group-item
                        div
                            | STEAMED CHICKEN RICE
                            span.badge-warning.badge-secondary.badge-pill.mx-2 1
                        div
                            span.text-muted RM 5.00
                        button.btn.btn-danger.btn-sm.float-right(ng-click='') Remove
                    //li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            span.text-muted Delivery fees
                        span.text-muted RM 10.00
                    li.list-group-item.d-flex.justify-content-between
                        h5.text-success SubTotal
                        strong.text-success RM 16.00
            .col-md-7.order-md-1
                h4.mb-3 Billing address
                form.needs-validation(novalidate='')
                    .row
                    .mb-3
                        label(for='address') Address
                        input#address.form-control(type='text' placeholder='1234 Main St' required='')
                        .invalid-feedback
                            | Please enter your shipping address.

                    hr.mb-4
                    .custom-control.custom-checkbox
                        input#save-info.custom-control-input(type='checkbox')

                    button.btn.btn-primary.btn-lg.btn-block(href='/checkout', type='submit') Continue to Checkout









