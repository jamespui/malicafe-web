extends shop_common/base
block css
block header
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/logo')
            img#logo.d-inline-block.mr-1(alt='Logo' src='/static/resto/img/logocafe_black.png' width='117' height='40')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
            form.form-inline.my-2.my-lg-0
                ul.navbar-nav.mr-auto
                    li
                        a.btn.btn-warning.btn-md.text-uppercase.mx-4(href='/cart') Continue Shopping
                    li
                        a.btn.btn-outline-danger.btn-md.text-uppercase(href='/logo') Go to Home

block content
    .container
        .py-5.text-center.form-inline.justify-content-center
            .col-md-6.order-md-2.mb-4
                h4.d-flex.justify-content-between.align-items-center.mb-3
                    span.text-muted SUMMARY
                    span.badge.badge-secondary.badge-pill 3
                ul.list-group.mb-3
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 KOLO MEE
                        span.text-muted RM 6.00
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 ROJAK
                        span.text-muted RM 5.00
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 STEAMED CHICKEN RICE
                        span.text-muted RM 5.00
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            span.text-muted Delivery fees
                        span.text-muted RM 14.00
                    li.list-group-item.d-flex.justify-content-between
                        h5.text-success Total
                        strong.text-success RM 30.00

            .col-md-7.order-md-2
                hr.mb-5
                button.btn.btn-primary.btn-lg.btn-block(type='submit') Confirm

                footer.my-5.pt-5.text-muted.text-center.text-small
                    p.mb-1 &copy; 2015-2018 MALICAFE
